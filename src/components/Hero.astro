---
<section class="min-h-screen relative overflow-hidden flex items-center">
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-b from-primary/90 via-primary/50 to-primary/90 z-10"></div>
    <img 
      src="/images/sofa-with-window-sunset-background.jpg" 
      alt="Luxury Italian Sofa" 
      class="w-full h-full object-cover scale-animation"
    />
  </div>
  
  <div class="max-w-7xl mx-auto px-6 relative z-20 text-center fade-in">
    <h1 class="font-display tracking-wider text-8xl mb-4 split-text">
      <span class="text-white block">DIVAN</span>
      <span class="text-accent block">ITALIA</span>
    </h1>
    <p class="text-xl text-white/80 font-light mb-6 fade-up">
      crafting luxury, redefining comfort
    </p>
    <p class="text-lg text-white/60 max-w-2xl mx-auto mb-12 fade-up-delay">
      explore a curated collection of timeless furniture,
      designed for elegance and built for life
    </p>
    <a 
      href="/catalog" 
      class="inline-block border border-accent text-accent hover:bg-accent hover:text-white transition-all duration-300 px-12 py-3 relative overflow-hidden group"
    >
      <span class="relative z-10">explore collection</span>
      <div class="absolute inset-0 bg-accent transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
    </a>
  </div>

  <div class="absolute bottom-12 left-1/2 -translate-x-1/2 z-20 scroll-indicator">
    <div class="w-px h-24 bg-white/20 relative">
      <div class="absolute top-0 w-full h-1/2 bg-accent animate-scroll"></div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Hero animations
  const timeline = gsap.timeline({ defaults: { ease: 'power3.out' } });

  timeline
    .from('.split-text span', {
      y: 100,
      opacity: 0,
      duration: 1,
      stagger: 0.2,
    })
    .from('.fade-up', {
      y: 50,
      opacity: 0,
      duration: 0.8,
    }, '-=0.5')
    .from('.fade-up-delay', {
      y: 50,
      opacity: 0,
      duration: 0.8,
    }, '-=0.3');

  // Parallax effect
  gsap.to('.scale-animation', {
    scale: 1.1,
    scrollTrigger: {
      trigger: 'section',
      start: 'top top',
      end: 'bottom top',
      scrub: 1,
    },
  });
</script>

<style>
  .animate-scroll {
    animation: scroll 2s infinite;
  }

  @keyframes scroll {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(200%); }
  }

  .scale-animation {
    transform-origin: center;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>