---
const stats = [
  {
    number: 50,
    suffix: '+',
    label: 'years of craftsmanship',
    description: 'bringing five decades of artisanal experience to every piece of furniture'
  },
  {
    number: 98,
    suffix: '%',
    label: 'customer satisfaction',
    description: 'our clients consistently rate their experience as exceptional, with near-perfect satisfaction scores'
  },
  {
    number: 10,
    suffix: '',
    label: 'year warranty',
    description: 'we stand by the quality of our furniture, offering a decade-long guarantee on all products'
  },
  {
    number: 100,
    suffix: '%',
    label: 'sustainable materials',
    description: 'our commitment to sustainability ensures that every piece is made from eco-friendly and responsibly sourced materials'
  }
];
---
<div class="stats-grid grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-x-24 md:gap-y-32 px-6 md:px-0">
  {stats.map(stat => (
    <div class="stat-item group relative p-6 md:p-0 will-change-transform">
      <!-- Decorative background -->
      <div class="absolute inset-0 bg-white/[0.02] opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      <div class="absolute inset-0 bg-gradient-to-br from-accent/[0.05] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      
      <!-- Content -->
      <div class="relative">
        <!-- Number and label -->
        <div class="flex flex-col gap-2">
          <div class="flex items-baseline gap-4">
            <div class="relative">
              <span 
                class="stat-number font-display text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-white/90 relative z-10"
                data-suffix={stat.suffix}
              >
                {stat.number}
              </span>
              <div class="absolute -inset-4 bg-accent/5 rounded-full blur-2xl -z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            <span class="text-accent text-sm md:text-base lg:text-lg tracking-wider">{stat.label}</span>
          </div>
          
          <!-- Animated line -->
          <div class="relative mt-4 md:mt-8">
            <div class="h-px w-0 group-hover:w-full bg-gradient-to-r from-accent/40 to-transparent transition-all duration-500 ease-out"></div>
          </div>
        </div>
        
        <!-- Description -->
        <p class="text-white/60 text-sm leading-relaxed mt-4 max-w-sm tracking-wide">
          {stat.description}
        </p>
      </div>
      
      <!-- Mobile-friendly decorative elements -->
      <div class="absolute -left-2 md:-left-3 top-0 w-px h-0 group-hover:h-full bg-gradient-to-b from-transparent via-accent/30 to-transparent transition-all duration-500 ease-out"></div>
      <div class="absolute -top-2 md:-top-3 -left-2 md:-left-3 w-4 md:w-6 h-px bg-accent/20 transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-out"></div>
      <div class="absolute -left-2 md:-left-3 -top-2 md:-top-3 h-4 md:h-6 w-px bg-accent/20 transform origin-top scale-y-0 group-hover:scale-y-100 transition-transform duration-300 ease-out"></div>
    </div>
  ))}
</div>

<style>
  .stat-number {
    line-height: 0.8;
    text-shadow: 0 0 30px rgba(224,163,79,0.1);
    will-change: transform;
  }

  .stat-item {
    transform: translateZ(0);
    background: rgba(255, 255, 255, 0.01);
    backdrop-filter: blur(8px);
    will-change: transform, opacity;
  }

  @media (prefers-reduced-motion: reduce) {
    .stat-item {
      transition: none !important;
    }
  }
</style>