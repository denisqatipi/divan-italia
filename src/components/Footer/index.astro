---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import Social from './Social.astro';
import Newsletter from './Newsletter.astro';
---
<footer class="relative bg-primary pt-12 md:pt-24 pb-6 md:pb-12 overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom,rgba(224,163,79,0.03),transparent_70%)]"></div>
  <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-accent/20 to-transparent"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-8 lg:gap-x-16 gap-y-10 md:gap-y-16 mb-10 md:mb-24">
      <!-- Logo and description -->
      <div class="md:col-span-2 lg:col-span-1">
        <Logo />
      </div>

      <!-- Navigation -->
      <div class="md:row-start-2 lg:row-start-1">
        <Navigation />
      </div>

      <!-- Social -->
      <div class="md:row-start-2 lg:row-start-1">
        <Social />
      </div>

      <!-- Newsletter -->
      <div class="md:col-span-2 lg:col-span-1">
        <Newsletter />
      </div>
    </div>

    <!-- Footer bottom -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 pt-6 md:pt-8 border-t border-white/10">
      <!-- Copyright -->
      <p class="text-[11px] sm:text-xs text-white/40 text-center md:text-left order-2 md:order-1">
        Â© {new Date().getFullYear()} DivanItalia. All rights reserved.
      </p>

      <!-- Legal links -->
      <div class="flex gap-6 order-1 md:order-2 mb-2 md:mb-0">
        <a href="/privacy" class="text-[11px] sm:text-xs text-white/40 hover:text-accent transition-colors duration-300">
          Privacy Policy
        </a>
        <a href="/terms" class="text-[11px] sm:text-xs text-white/40 hover:text-accent transition-colors duration-300">
          Terms of Service
        </a>
      </div>
    </div>
  </div>
</footer>