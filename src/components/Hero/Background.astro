---
const imagePath = '/images/sofa-with-window-sunset-background.jpg';
---
<div class="absolute inset-0 z-0">
  <div class="absolute inset-0 bg-gradient-to-b from-black/90 via-black/75 to-primary z-10"></div>
  <div class="absolute inset-0 bg-black/60 z-[5]"></div>
  <picture>
    <source srcset={imagePath} type="image/jpeg" />
    <img 
      src={imagePath}
      alt="Luxury Italian Sofa" 
      class="w-full h-full object-cover scale-animation"
      loading="eager"
      decoding="async"
      onerror="this.style.display='none'"
    />
  </picture>
</div>

<style>
  .scale-animation {
    transform-origin: center;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>